{
  "include": ["src", "tests", "stories", "@testing-library/jest-dom/vitest"],
  "compilerOptions": {
    "noEmit": true,
    "declaration": true,
    "noEmitOnError": true,
    "outDir": "./dist",
    "skipLibCheck": true,
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "isolatedModules": true,
    "lib": ["dom", "ESNext"],
    "jsx": "react-jsx",
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "esModuleInterop": true,
    "types": ["vitest/globals", "@testing-library/jest-dom"]
  }
}
