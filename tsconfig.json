{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "isolatedModules": true,
    "lib": ["dom", "ESNext"],
    "jsx": "react-jsx",
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "composite": true,
    "resolveJsonModule": true,
    "customConditions": ["source"],
    "allowJs": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {
      "use-carousel": ["../src"],
      "styled-system/*": ["./styled-system/*"]
    }
  }
}
