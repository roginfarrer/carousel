{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      { "name": "next" },
      { "name": "typescript-plugin-css-modules" }
    ],
    "paths": {
      "@/*": ["./*"],
      "react-aria-carousel": ["../react-aria-carousel/src/index.ts"],
      "styled-system/*": ["./styled-system/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "../data.ts"
  ],
  "exclude": ["node_modules"]
}
